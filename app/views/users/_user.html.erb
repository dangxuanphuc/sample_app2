<li id="user-<%= user.id %>">
  <%= gravatar_for user, size: Settings.gravatar_size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !user.current_user?(current_user) %>
    | <%= link_to "Delete", user, method: :delete, remote: true,
    data: { confirm: "You sure?" } %>
  <% end %>
</li>
