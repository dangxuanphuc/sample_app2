<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <div class="profile">
        <div class="avatar">
          <%= gravatar_for @user, size: 150 %>
        </div>

        <div class="username"><%= @user.name %></div>

        <section class="stats">
          <%= render "shared/stats" %>
        </section>

        <%= render "follow_form" if logged_in? %>
      </div>
    </section>
  </aside>

  <div class="col-md-9">
    <% if @user.microposts.any? %>
      <div id="count_micropost">Microposts (<%= @user.microposts.count %>)</div>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
