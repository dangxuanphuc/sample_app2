<span class="user">
  <div class="gravatar-user">
    <%= link_to (gravatar_for micropost.user, size: 40), micropost.user %>
  </div>
  <%= link_to micropost.user.name, micropost.user %>

  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
</span>

<div class="edit-micropost pull-right">
  <% if current_user.id == micropost.user_id %>
    <%= link_to "Edit", edit_micropost_path(micropost), remote: true %>
    <%= link_to "Delete", micropost, method: :delete, remote: true, data: { confirm: "Are you sure?" } %>
  <% end %>
  <div id="micropost-id-<%= micropost.id %>"></div>
</div>

<span class="content">
  <%= micropost.content %>
  <%= image_tag micropost.picture.url if micropost.picture? %>
</span>
