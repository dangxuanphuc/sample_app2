<% if comment.user_id.present? %>
  <div id="comment-<%= comment.id %>" class="current-comment" data-id="<%= comment.id %>">
    <div id="comment">
      <div class="comment-user">
        <div class="gravatar-user">
          <%= link_to (gravatar_for comment.user, size: 40), comment.user %>
        </div>

        <%= link_to comment.user.name, comment.user %>

        <div class="timestamp">
          <%= time_ago_in_words(comment.created_at).capitalize %> ago.
        </div>
      </div>

      <div id="comment">
        <%= comment.content %>
      </div>

      <% if comment.user == current_user %>
        <%= link_to "Edit", edit_micropost_comment_path(micropost, comment), remote: true %>
        <%= link_to "Delete", micropost_comment_path(micropost, comment), method: :delete, data: { confirm: "Are you sure?" }, remote: true %>
      <% end %>

      <div id="comment-id-<%= comment.id %>"></div>
    </div>
  </div>
<% end %>
